            <renameColumn tableName="m_creditbureau_loanproduct_mapping" oldColumnName="is_active" newColumnName="isActive" columnDataType="BOOLEAN"/>
            <renameColumn tableName="m_creditbureau_token" oldColumnName="token_type" newColumnName="tokenType" columnDataType="VARCHAR(128)"/>
