    <changeSet author="fineract" id="1" objectQuotingStrategy="QUOTE_ALL_OBJECTS">
        <preConditions  onFail="WARN">
            <sqlCheck  expectedResult="1">SELECT COUNT(*) FROM INFORMATION_SCHEMA.COLUMNS WHERE TABLE_NAME = 'm_adhoc' AND COLUMN_NAME = 'IsActive' AND TABLE_SCHEMA='${database.defaultSchemaName}'</sqlCheck>
