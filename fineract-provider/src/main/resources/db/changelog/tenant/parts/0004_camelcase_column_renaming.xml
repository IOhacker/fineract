            <sqlCheck  expectedResult="1">SELECT COUNT(*) FROM INFORMATION_SCHEMA.COLUMNS WHERE TABLE_NAME = 'm_creditbureau_loanproduct_mapping' AND COLUMN_NAME = 'isActive' AND TABLE_SCHEMA='${database.defaultSchemaName}'</sqlCheck>
            <sqlCheck  expectedResult="1">SELECT COUNT(*) FROM INFORMATION_SCHEMA.COLUMNS WHERE TABLE_NAME = 'm_creditbureau_token' AND COLUMN_NAME = 'tokenType' AND TABLE_SCHEMA='${database.defaultSchemaName}'</sqlCheck>
            <sqlCheck  expectedResult="1">SELECT COUNT(*) FROM INFORMATION_SCHEMA.COLUMNS WHERE TABLE_NAME = 'm_creditbureau_token' AND COLUMN_NAME = 'expiresIn' AND TABLE_SCHEMA='${database.defaultSchemaName}'</sqlCheck>
